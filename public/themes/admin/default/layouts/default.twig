<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="csrf-token" content="{{ csrf_token() }}" />
        <title>{{ (meta.title ? meta.title ~ ' &mdash; '~trans('texts.app_name') : trans('texts.app_name'))|raw }}</title>
        <link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bower_components/font-awesome/css/font-awesome.min.css') }}">
        {% block styles %}{% endblock %}
        <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700" rel="stylesheet" type="text/css">
        <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ theme('assets/css/style.css') }}">
    </head>
<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Administration</a>
            </div>
            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        {{ user.email }}  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#">Logout</a></li>
                    </ul>
                </li>
            </ul>
            
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="#"{{ activeMenu == 'users' ? ' class="active"' : '' }}><i class="fa fa-group fa-fw"></i> Users</a>
                        </li>
                        <li{{ activeMenu == 'settings' ? ' class="active"' : '' }}>
                            <a href="#"><i class="fa fa-gears fa-fw"></i> Settings<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li><a href="#"{{ activeSubMenu == 'languages' ? ' class="active"' : '' }}><i class="fa fa-language fa-fw pull-right text-muted"></i> Languages</a></li>
                                <li><a href="#"{{ activeSubMenu == 'translations' ? ' class="active"' : '' }}><i class="fa fa-globe fa-fw pull-right text-muted"></i> Translations</a></li>
                                <li><a href="#"{{ activeSubMenu == 'countries' ? ' class="active"' : '' }}><i class="fa fa-map fa-fw pull-right text-muted"></i> Countries</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="page-wrapper">
            {% block content %}{% endblock %}
        </div>
        
    </div>
    
    <script type="text/javascript" src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/jquery-ui/jquery-ui.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/kubexia-formjs/form.js') }}"></script>
    <script type="text/javascript" src="{{ asset('common/assets/js/functions.js') }}"></script>
    {% block javascripts %}{% endblock %}
    <script type="text/javascript" src="{{ theme('assets/js/app.js') }}"></script>
</body>
</html>
