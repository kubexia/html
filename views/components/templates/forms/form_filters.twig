{% import 'components/macros/form_elements.twig' as c %}
{% set formId = (form.hasOption('id') ? 'id="'~form.getOption('id')~'"' : '') %}
<form {{ formId|raw }} action="{{ form.getAction() }}" method="GET">
    <div class="row">
        {% for el in form.getElements() %}
            {% if el.element.type == 'view' %}
                {{ el.element.template|raw }}
            {% elseif el.element.type == 'break' %}
                <hr class="form-break">
            {% else %}
                <div class="col-md-{{ 12/form.getOption('cols') }}">
                    <div class="form-group">
                        {% if el.element.label %}
                            <label>{{ el.element.label }}</label>
                        {% endif %}
                        {{ attribute(c, el.element.type, {'el': el.element,'attr': el.attributes, 'form': form}) }}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> {{ trans('forms.buttons.filters.search') }}</button>
    {% if form.getOption('totalFilters') > 0 %}
        <a href="{{ form.getAction() }}" class="btn btn-default"><i class="fa fa-times fa-fw text-muted"></i> <span class="text-muted">{{ trans('forms.buttons.filters.search') }}</span></a>
    {% endif %}
</form>